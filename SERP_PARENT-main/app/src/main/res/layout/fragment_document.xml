<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="60dp"
    tools:context=".DocumentFragment">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:orientation="vertical"
            android:background="@drawable/dashedborder"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginBottom="16dp"> <!-- Padding to ensure the border is around the content -->

            <ImageView
                android:id="@+id/image_file_icon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:padding="10dp"
                android:src="@drawable/upload" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview_black"
                android:gravity="center"
                android:text="@string/browse_file"
                android:textColor="@color/white"
                android:textSize="20sp" /> <!-- Add margin to create space between the image and text -->
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/card_image_file_icon21"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_file_copy_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/text_file_name21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="File Name"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/card_image_file_icon21"
                    app:layout_constraintEnd_toStartOf="@+id/download21"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/text_file_size21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File Size"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/text_file_name21"
                    app:layout_constraintTop_toBottomOf="@+id/text_file_name21"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp" />

                <ImageView
                    android:id="@+id/download21"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_download_for_offline_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_image_file_icon2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_file_copy_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/text_file_name2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="File Name"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/card_image_file_icon2"
                app:layout_constraintEnd_toStartOf="@+id/download2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/text_file_size2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Size"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/text_file_name2"
                app:layout_constraintTop_toBottomOf="@+id/text_file_name2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/download2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_download_for_offline_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>
